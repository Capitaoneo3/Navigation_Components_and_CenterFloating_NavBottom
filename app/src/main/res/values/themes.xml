<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="GeneralNoTitle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="button" >
        <item name="rippleColor">@color/white</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>
    <style name="buttonWithIcon" parent="button">
        <item name="android:backgroundTint">#4869D4</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">24dp</item>
        <item name="iconTint">#FFFFFF</item>
    </style>
    <style name="buttonNoBg" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">#2196F3</item>
    </style>

    <style name="fontTitleIntro" arent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:maxLength">20</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="fontBodyIntro" arent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">70</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="fontBodyIntroSub" arent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLength">70</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>