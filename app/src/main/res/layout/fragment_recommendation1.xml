<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.Recommendation1Frag">

    <TextView
        android:id="@+id/textView13"
        style="@style/fontTitleIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/inter_semibold"
        android:maxLength="50"
        android:text="Alguém te recomendou o aplicativo?"
        android:textAlignment="textStart"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

        <Button
            android:id="@+id/no_bt_reco1"
            style="@style/bt16FontS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:backgroundTint="#A6E91E1E"
            android:fontFamily="@font/inter_extrabold"
            android:text="Não"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/yes_bt_reco1"
            style="@style/bt16FontS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:backgroundTint="#A90CAF13"
            android:fontFamily="@font/inter_extrabold"
            android:text="Sim"
            android:textAllCaps="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>