<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.fragment.SiginInFrag"
    android:background="@drawable/sign_in_bg"
    >


    <TextView
        android:id="@+id/textView5"
        style="@style/fontTitleIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="120dp"
        android:text="Bem Vindo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button"
            style="@style/buttonWithIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4869D4"
            android:fontFamily="@font/inter_medium"
            android:padding="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Continue com Facebook"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:icon="@drawable/ic_facebook"
            app:iconGravity="textStart"
            app:iconPadding="24dp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            style="@style/buttonWithIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EB4132"
            android:text="Continue com Google"
            app:icon="@drawable/ic_google" />

        <Button
            android:id="@+id/button3"
            style="@style/buttonNoBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cadastre-se usando email"
            app:strokeColor="#256CFE" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="104dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                style="@style/fontBodyIntroSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Você já possui cadastro?" />

            <TextView
                android:id="@+id/textView7"
                style="@style/fontBodyIntroSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Conecte-se "
                android:textColor="#256CFE" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>