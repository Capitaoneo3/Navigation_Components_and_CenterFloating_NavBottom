<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.PhoneValidation2Frag"
    android:background="@drawable/phone_validation2_bg"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.18">

        <com.fraggjkee.smsconfirmationview.SmsConfirmationView
            android:id="@+id/sms_code_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            app:scv_smsDetectionMode="disabled"
            app:scv_symbolBackgroundColor="#79000000"
            app:scv_symbolBorderColor="@color/white"
            app:scv_symbolBorderWidth="0dp"
            app:scv_symbolHeight="80dp"
            app:scv_symbolTextSize="15sp"
            app:scv_symbolWidth="70dp"
            app:scv_symbolsSpacing="10dp" />

        <Button
            android:id="@+id/next_bt_vali2"
            style="@style/bt16FontS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="36dp"
            android:backgroundTint="@color/buttonDefault1"
            android:text="Avançar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998">

        <TextView
            android:id="@+id/textView8"
            style="@style/fontTitleIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite o "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView10"
            style="@style/fontTitleIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:text="Código de Verificação"
            android:textColor="#7EECCB" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>